{
  "manifest_version": 3,
  "name": "TPulse Extensions",
  "description": "Collect metrics from browser usage",
  "version": "0.0.1",
  "action": {
    "default_icon": "public/clock.png",
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": [
    "tabs",
    "background",
    "nativeMessaging",
    "webNavigation"
  ]
}